{% if icon %}
  {% assign cardIcon = icon %}
{% elsif type == "resource" %}
  {% if filetype == "pdf" %}
    {% assign cardIcon = "file-pdf" %}
  {% elsif filetype == "doc" %}
    {% assign cardIcon = "file-doc" %}
  {% endif %}
{% endif %}

<a href="{{ url }}" class="card-new" data-type="{{ type }}">
  <h3 class="card-new-header h5">{% if cardIcon %}{% icon cardIcon %}{% endif %}{{ title }}</h3>
  <p class="card-new-body">{{ description }}</p>
  <p class="card-new-cta">
    {%- if type == 'resource' -%}
      {% icon 'download-simple' %} Download
    {%- else -%}
      Browse plays {% icon 'arrow-right' %}
    {%- endif -%}
  </p>
</a>